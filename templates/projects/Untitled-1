<template>
    <div class = "row"> 
        <div class="col-md-6">
            <div  style="font-size:16px">Component Details</div>
        </div>
        <div class="col-md-4">
            <transition :duration="{ enter: 500, leave: 100 }">
                <p>{{copyMessage}}</p>
            </transition>
        </div>
        <div class = "col-md-1">
                <i id="close-icon" @click="$router.back()" class="fa fa-close pull-right" style="color:#3AB0D5; padding-left: 15px; font-size: 20px;"></i>
        </div>
        <div class = "col-md-1 container">
            <i  v-clipboard:copy="snippet"
                class="fa fa-clipboard pull-right" 
                style="color:#3AB0D5; font-size: 20px;"></i>
        </div>       
    </div>    
</template>
<style>
</style>
<script>
import Prism from 'vue-prism-component'
import Vue from 'vue';
import * as types from '../store/types';

    export default {
        name: 'PreviewHeader',
        data(){
            return {
                copyMessage: '',
                msgTransition: 'fade'
                }
        },
        computed: {
            snippet: {
                get() { 
                    return this.$store.getters[types['GET_' + this.$route.params.componentName + '_SNIPPET']];
                    }
            }
        },
        methods: {
            onCopied() {
                console.log("testttttt")
                this.copyMessage = 'Copied'
                    setTimeout( () => {
                    this.copyMessage = '';
                }, 3000);
            }
            }
    
    }
</script>